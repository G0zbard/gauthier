  <!-- Modal Panier -->
  <div id="cartModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white p-6 rounded-lg w-96 max-h-[90vh] overflow-y-auto">
      <h3 class="text-xl font-bold mb-4">Votre Panier</h3>
      <ul id="cartItems" class="mb-4 space-y-2"></ul>
      <p class="font-bold mb-4">Total: <span id="cartTotal">0 €</span></p>
      <div class="space-y-3 mb-4">
        <input type="text" placeholder="Adresse de livraison" class="w-full border p-2 rounded">
        <input type="email" placeholder="Email pour le suivi" class="w-full border p-2 rounded">
      </div>
      <button onclick="openPayment()" class="bg-green-500 text-white px-4 py-2 rounded">Commander</button>
      <button onclick="closeCart()" class="ml-2 px-4 py-2 border rounded">Fermer</button>
    </div>
  </div>

  <!-- Modal Paiement -->
  <div id="paymentModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white p-6 rounded-lg w-96">
      <h3 class="text-xl font-bold mb-4">Paiement</h3>
      <form class="space-y-4">
        <input type="text" placeholder="Nom complet" class="w-full border p-2 rounded">
        <input type="text" placeholder="Numéro de carte (factice)" class="w-full border p-2 rounded">
        <div class="flex gap-2">
          <input type="text" placeholder="MM/AA" class="w-1/2 border p-2 rounded">
          <input type="text" placeholder="CVV" class="w-1/2 border p-2 rounded">
        </div>
        <button type="button" onclick="alert('Paiement démo effectué !')" class="bg-blue-600 text-white px-4 py-2 rounded w-full">Payer</button>
      </form>
      <button onclick="closePayment()" class="mt-4 px-4 py-2 border rounded w-full">Annuler</button>
    </div>
  </div>

  <script>
    // Produits avec prix réduits de moitié et notes
    const products = [
      {name: "Moon Lamp", price: 15, old: 30, rating: 5, reviews: 120, img: "https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?auto=format&fit=crop&w=600"},
      {name: "Color-Changing Swimsuit", price: 25, old: 50, rating: 4, reviews: 230, img: "https://images.unsplash.com/photo-1590764352308-9c0a95e3f6b3?auto=format&fit=crop&w=600"},
      {name: "Ice Roller", price: 10, old: 20, rating: 4, reviews: 150, img: "https://images.unsplash.com/photo-1616394584738-5ad7881e5341?auto=format&fit=crop&w=600"},
      {name: "Rain Cloud Humidifier", price: 20, old: 40, rating: 5, reviews: 270, img: "https://images.unsplash.com/photo-1606813907291-78fc8c56b3e5?auto=format&fit=crop&w=600"},
      {name: "2-in-1 Fan + Humidifier", price: 25, old: 50, rating: 4, reviews: 180, img: "https://images.unsplash.com/photo-1594381898411-846e7d193883?auto=format&fit=crop&w=600"},
      {name: "Retro Flip Clock", price: 30, old: 60, rating: 3, reviews: 95, img: "https://images.unsplash.com/photo-1606813907287-9fc4e66d66e2?auto=format&fit=crop&w=600"},
      {name: "Portable Coffee Maker", price: 40, old: 80, rating: 5, reviews: 210, img: "https://images.unsplash.com/photo-1618213837799-7f6576682189?auto=format&fit=crop&w=600"},
      {name: "Automatic Cat Toy", price: 13, old: 26, rating: 4, reviews: 160, img: "https://images.unsplash.com/photo-1561948955-570b270e7c36?auto=format&fit=crop&w=600"},
      {name: "Phone Polarizing Lens", price: 10, old: 20, rating: 4, reviews: 38, img: "https://images.unsplash.com/photo-1508898578281-774ac4893c0c?auto=format&fit=crop&w=600"},
      {name: "Portable Smoothie Blender", price: 20, old: 40, rating: 5, reviews: 200, img: "https://images.unsplash.com/photo-1622202173121-cbc3bb872e90?auto=format&fit=crop&w=600"},
    ];

    const productGrid = document.getElementById("products");
    products.forEach((p, i) => {
      const stars = "⭐️".repeat(p.rating) + "☆".repeat(5 - p.rating);
      const div = document.createElement("div");
      div.className = "bg-white p-4 rounded-lg shadow hover:shadow-lg transition";
      div.innerHTML = `
        <img src="${p.img}" alt="${p.name}" class="rounded mb-4 h-48 w-full object-cover">
        <h4 class="text-lg font-bold mb-2">${p.name}</h4>
        <p class="mb-1"><span class="line-through text-gray-500 mr-2">${p.old} €</span><span class="text-red-600 font-bold">${p.price} €</span></p>
        <p class="text-sm text-yellow-500 mb-2">${stars} <span class="text-gray-600 text-xs">(${p.reviews} avis)</span></p>
        <button onclick="addToCart(${i})" class="mt-3 bg-blue-600 text-white px-4 py-2 rounded w-full">Ajouter au panier</button>
      `;
      productGrid.appendChild(div);
    });

    let cart = [];

    function addToCart(i){
      cart.push(products[i]);
      updateCart();
    }

    function updateCart(){
      document.getElementById("cartCount").innerText = cart.length;
      const items = document.getElementById("cartItems");
      items.innerHTML = "";
      let total = 0;
      cart.forEach((p, idx) => {
        total += p.price;
        items.innerHTML += `<li class='flex justify-between'>${p.name} - ${p.price}€ <button onclick='removeFromCart(${idx})' class='text-red-500'>X</button></li>`;
      });
      document.getElementById("cartTotal").innerText = total + " €";
    }

    function removeFromCart(i){
      cart.splice(i,1);
      updateCart();
    }

    document.getElementById("cartBtn").onclick = ()=>{
      document.getElementById("cartModal").classList.remove("hidden");
    }

    function closeCart(){
      document.getElementById("cartModal").classList.add("hidden");
    }

    function openPayment(){
      document.getElementById("cartModal").classList.add("hidden");
      document.getElementById("paymentModal").classList.remove("hidden");
    }

    function closePayment(){
      document.getElementById("paymentModal").classList.add("hidden");
    }

    feather.replace();
  </script>
</body>
</html>
